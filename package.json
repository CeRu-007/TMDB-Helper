{
  "name": "tmdb-helper",
  "version": "0.5.0",
  "description": "功能强大的 TMDB 媒体维护助手 - 支持 Web、Electron 桌面端和 Docker 部署",
  "author": "TMDB Helper Team",
  "keywords": [
    "tmdb",
    "docker",
    "nextjs",
    "media-management",
    "containerized",
    "electron",
    "desktop"
  ],
  "main": "electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "cross-env NODE_ENV=production next start",
    "lint": "next lint",
    "task-daemon": "node scripts/task-scheduler-daemon.js",
    "task-daemon:dev": "node scripts/task-scheduler-daemon.js --port=4949 --interval=300",
    "docker:build": "docker build -t tmdb-helper .",
    "docker:run": "docker run -p 3000:3000 -v ./data:/app/data -v ./logs:/app/logs tmdb-helper",
    "docker:dev": "docker-compose up --build",
    "docker:logs": "docker logs tmdb-helper",
    "docker:shell": "docker exec -it tmdb-helper bash",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron:dev": "node scripts/electron-dev.js",
    "electron:build": "node scripts/optimize-build.js && cross-env ELECTRON_BUILD=true ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ pnpm run build && electron-builder --win",
    "electron:build:mac": "node scripts/optimize-build.js && cross-env ELECTRON_BUILD=true ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ pnpm run build && electron-builder --mac",
    "electron:build:linux": "node scripts/optimize-build.js && cross-env ELECTRON_BUILD=true ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ pnpm run build && electron-builder --linux",
    "electron:build:all": "node scripts/optimize-build.js && cross-env ELECTRON_BUILD=true ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ pnpm run build && electron-builder --win --mac --linux",
    "electron:pack": "cross-env ELECTRON_BUILD=true ELECTRON_MIRROR=https://github.com/electron/electron/releases/download/ pnpm run build && electron-builder --dir",
    "analyze-size": "node scripts/analyze-size.js"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@hookform/resolvers": "^3.9.1",
    "@radix-ui/react-accordion": "1.2.12",
    "@radix-ui/react-alert-dialog": "1.1.15",
    "@radix-ui/react-aspect-ratio": "1.1.8",
    "@radix-ui/react-avatar": "1.1.11",
    "@radix-ui/react-checkbox": "1.3.3",
    "@radix-ui/react-collapsible": "1.1.12",
    "@radix-ui/react-context-menu": "2.2.16",
    "@radix-ui/react-dialog": "1.1.15",
    "@radix-ui/react-dropdown-menu": "2.1.16",
    "@radix-ui/react-hover-card": "1.1.15",
    "@radix-ui/react-label": "2.1.8",
    "@radix-ui/react-menubar": "1.1.16",
    "@radix-ui/react-navigation-menu": "1.2.14",
    "@radix-ui/react-popover": "1.1.15",
    "@radix-ui/react-progress": "1.1.8",
    "@radix-ui/react-radio-group": "1.3.8",
    "@radix-ui/react-scroll-area": "1.2.10",
    "@radix-ui/react-select": "2.2.6",
    "@radix-ui/react-separator": "1.1.8",
    "@radix-ui/react-slider": "1.3.6",
    "@radix-ui/react-slot": "1.2.4",
    "@radix-ui/react-switch": "1.2.6",
    "@radix-ui/react-tabs": "1.1.13",
    "@radix-ui/react-toast": "1.2.15",
    "@radix-ui/react-toggle": "1.1.10",
    "@radix-ui/react-toggle-group": "1.1.11",
    "@radix-ui/react-tooltip": "1.2.8",
    "@radix-ui/react-visually-hidden": "1.2.4",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/react-virtual": "^3.13.10",
    "@types/bcryptjs": "^2.4.6",
    "@types/file-saver": "^2.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "@uiw/react-markdown-preview": "^5.1.5",
    "autoprefixer": "^10.4.20",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "csv-parse": "^5.6.0",
    "embla-carousel-react": "8.5.1",
    "file-saver": "^2.0.5",
    "formidable": "^3.5.4",
    "input-otp": "1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jszip": "^3.10.1",
    "lucide-react": "^0.522.0",
    "next": "15.2.4",
    "next-themes": "0.4.6",
    "rc-util": "^5.38.1",
    "react": "^18.3.1",
    "react-day-picker": "9.13.0",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^2.1.7",
    "rehype-highlight": "^7.0.2",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "sonner": "^1.7.1",
    "styled-jsx": "^5.1.7",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.1.0",
    "xlsx": "^0.18.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "glob": "^10.3.10",
    "postcss": "^8.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.tmdbhelper.app",
    "productName": "TMDB Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "!.next/cache/**/*",
      "!.next/server/**/*.map",
      "!.next/static/**/*.map",
      "!.next/standalone/node_modules/.pnpm/**/*",
      "node_modules/next/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      "node_modules/@next/**/*",
      "node_modules/styled-jsx/**/*",
      "public/tmdb-helper-logo.png",
      "public/images/tmdb-helper-logo-new.png",
      "public/placeholder*.png",
      "public/placeholder*.svg",
      "public/placeholder*.jpg",
      "package.json"
    ],
    "asarUnpack": [
      ".next/**/*",
      "node_modules/next/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*"
    ],
    "extraResources": [],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/images/tmdb-helper-logo-new.png",
      "compression": "maximum"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/images/tmdb-helper-logo-new.png",
      "compression": "maximum",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/images/tmdb-helper-logo-new.png",
      "compression": "maximum",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "TMDB Helper",
      "differentialPackage": false
    },
    "compression": "maximum",
    "removePackageScripts": true,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "asar": {
      "smartUnpack": true
    },
    "extraMetadata": {
      "main": "electron/main.js",
      "version": "0.5.2"
    }
  },
  "electronMain": "electron/main.js"
}